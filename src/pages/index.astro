import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
import { Contact } from "../components/Contact";
import { Projects } from "../components/Projects";
---

<BaseLayout>
  <div
    class="min-h-dvh relative flex flex-col justify-center gap-12 pb-[140px] md:pb-[180px]"
  >
    <div class="text-blank-light flex flex-col gap-16 cursor-pointer">
      <h1
        class="text-center text-[70px] md:text-[80px] lg:text-[90px] font-extrabold"
      >
        Roseny
      </h1>
      <h2
        class="frontend min-h-[45px] max-h-[68px] text-center font-semibold text-[36px] md:text-[40px] lg:text-[48px]"
      >
        a Frontend Developer
      </h2>
    </div>
    <section class="text-">
      <p>
        In constant growth, with a <span class="font-bold text-second"
          >strong foundation</span
        > in <span class="">HTML</span>, <span class="">CSS</span>, and <span
          class="">JavaScript</span
        >. This knowledge has provided me with a solid base for continuous <span
          class="font-bold text-second"
        >
          learning</span
        > of new trends, and I <span class="font-bold text-second">apply</span> what
        I learn by developing projects with modern tools such as <span class=""
          >React</span
        >, <span class="">NextJs</span>, and <span class="">TailwindCSS</span>,
        among others.
      </p>
      <!-- <p class="indent-12">
        Each project is an opportunity to keep <span
          class="font-bold text-second">improving</span
        > and <span class="font-bold text-second">expanding my experience</span
        >.
      </p> -->
    </section>
  </div>
  <div class="min-h-dvh flex flex-col justify-center py-5 gap-20">
    <h2
      class="text-center text-blank-light font-bold text-[36px] md:text-[40px] lg:text-[48px]"
    >
      My experience
    </h2>
    <ul class="w-full flex flex-col gap-20 font-sans">
      <Projects client:idle />
    </ul>
  </div>
  <!-- <div class="min-h-dvh flex flex-col justify-center py-5 gap-20">
    <h2
      class=" text-center text-blank-light font-bold text-[20px] md:text-[24px]"
    >
      My skills
    </h2>
    <section></section>
  </div> -->
  <div
    class="min-h-dvh flex flex-col justify-center items-center gap-16 pt-[96px] md:pt-[106px]"
  >
    <h2
      class="text-center text-blank-light font-bold text-[20px] md:text-[24px]"
    >
      I am looking for new opportunities
    </h2>
    <Contact />
  </div>
</BaseLayout>
