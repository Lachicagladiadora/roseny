---
import Footer from "../components/Footer.astro";
import { Header } from "../components/Header";
import "../styles/global.css";

const { frontmatter } = Astro.props;
// const childrenHeader = frontmatter.children;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"> -->
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>roseny.dev</title>

    <meta
      name="description"
      content="Personal website with portfolio and blog for devs"
    />
    <meta
      name="keywords"
      content="roseny, rosenyquintanilla, roseny quintanilla, roseny.dev, roseny dev, dev roseny"
    />
    <meta name="author" content="Roseny" />

    <!-- Open Graph for social medias (Facebook, LinkedIn, etc.) -->
    <meta property="og:title" content="Roseny" />
    <meta
      property="og:description"
      content="Personal website with portfolio and blog for devs"
    />
    <meta property="og:image" content="https://ejemplo.com/favicon.svg" />
    <meta property="og:url" content="https://roseny.dev" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards (Optimize fot Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Roseny" />
    <meta
      name="twitter:description"
      content="Personal website with portfolio and blog for devs"
    />
    <meta name="twitter:image" content="https://ejemplo.com/favicon.svg" />
    <meta name="twitter:site" content="@roseny" />

    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Nova+Flat&display=swap"
      rel="stylesheet"
    /> -->
  </head>
  <body
    id="body-element"
    class="w-full h-full min-h-[100vh] flex flex-col transition-colors text-blank-dark font-overpass-mono bg-first text-base md:text-lg"
  >
    <Header />
    <main
      class="w-full max-w-[1000px] h-full min-h-[86dvh] mx-auto p-5 flex-1 flex flex-col"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
